<% provide(:title, 'Log in') %>
<!-- form_for for a non-active record object -->
<!-- Tell rails which path to use            -->
<!-- Otherwise, rails knows, POST  /login route:login_path action:create -->
<!-- Create a form that issue a POST request to this path:login_path     -->
<div class="row">
  <div class="col s12 m12 l12">
    <div class="container ">
      <p id="notice"><%= notice %></p>
        <h4>Login </h4>
          <%= form_for(:session, url: login_path) do |f| %>

            <div class="field">
              <%= f.label :email %>
              <%= f.text_field :email %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <%= f.password_field :password %>
            </div>

           <!-- <div class="field">
             <div class="collection-check-box">
                <%= f.label :remember_me, class: "checkbox inline" do %>
                  <%= f.check_box :remember_me %>
                  <span>Remember me on this computer</span>
                <% end %>
             </div>
           </div> -->

            <div class="input-field col s12 m3 l3">
              <div class="btn bc-primary-color spi-call-to-action waves-effect  waves-light">
                 <%= f.submit "Log In"%>
              </div>
            </div>

          <% end %>
          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
</div>
